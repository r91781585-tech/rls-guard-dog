{
  "name": "rls-guard-dog",
  "version": "1.0.0",
  "description": "A comprehensive Row Level Security (RLS) implementation demonstrating secure data access patterns for educational platforms using Supabase, with MongoDB integration and modern UI.",
  "main": "index.html",
  "scripts": {
    "dev": "npx serve . -p 3000",
    "start": "npx serve . -p 8080",
    "build": "echo 'Static site - no build required'",
    "test": "jest",
    "test:security": "jest tests/security/",
    "test:integration": "jest tests/integration/",
    "test:unit": "jest tests/unit/",
    "test:all": "npm run test:security && npm run test:integration && npm run test:unit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "supabase db reset",
    "db:seed": "supabase db reset --with-seed",
    "db:types": "supabase gen types typescript --local > src/types/database.types.ts",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint src/js/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "validate": "npm run lint && npm run test:security",
    "deploy": "gh-pages -d .",
    "docs:serve": "docsify serve docs",
    "security:audit": "npm audit && npm run test:security",
    "performance:test": "lighthouse http://localhost:3000 --output=json --output-path=./reports/lighthouse.json",
    "accessibility:test": "pa11y http://localhost:3000"
  },
  "keywords": [
    "row-level-security",
    "rls",
    "supabase",
    "postgresql",
    "security",
    "education",
    "database",
    "authentication",
    "authorization",
    "javascript",
    "html",
    "css",
    "web-security",
    "data-protection",
    "privacy"
  ],
  "author": {
    "name": "RLS Guard Dog Team",
    "email": "team@rlsguarddog.com",
    "url": "https://github.com/r91781585-tech/rls-guard-dog"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/r91781585-tech/rls-guard-dog.git"
  },
  "bugs": {
    "url": "https://github.com/r91781585-tech/rls-guard-dog/issues"
  },
  "homepage": "https://r91781585-tech.github.io/rls-guard-dog/",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-security": "^1.7.1",
    "gh-pages": "^6.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "pa11y": "^7.0.0",
    "prettier": "^3.1.0",
    "serve": "^14.2.1",
    "supabase": "^1.123.4"
  },
  "dependencies": {
    "chart.js": "^4.4.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/**/*.min.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 30000
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "security"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "no-undef": "error",
      "security/detect-object-injection": "warn",
      "security/detect-non-literal-regexp": "warn",
      "security/detect-unsafe-regex": "error"
    },
    "globals": {
      "Chart": "readonly",
      "supabaseManager": "readonly"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "files": [
    "src/",
    "supabase/",
    "tests/",
    "docs/",
    "index.html",
    "README.md",
    "LICENSE"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/r91781585-tech"
  },
  "security": {
    "advisories": {
      "ignore": []
    }
  },
  "config": {
    "supabase": {
      "projectId": "your-project-id",
      "apiUrl": "https://your-project.supabase.co",
      "anonKey": "your-anon-key"
    },
    "mongodb": {
      "uri": "mongodb://localhost:27017/rls-guard-dog"
    }
  }
}