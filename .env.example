# RLS Guard Dog - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:54321/postgres

# MongoDB Configuration (Optional - for additional data storage)
MONGODB_URI=mongodb://localhost:27017/rls-guard-dog
MONGODB_DB_NAME=rls-guard-dog

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@rlsguarddog.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:54321/postgres_test
TEST_SUPABASE_URL=http://localhost:54321
TEST_SUPABASE_ANON_KEY=test-anon-key

# Analytics Configuration (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Third-party Integrations (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/xxx

# Performance Monitoring (Optional)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_FILE_UPLOADS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=false

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Development Tools
BROWSER=chrome
EDITOR=vscode

# API Keys for External Services
OPENAI_API_KEY=your-openai-api-key
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx

# Social Authentication (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000

# Content Security Policy
CSP_REPORT_URI=https://your-domain.com/csp-report
CSP_REPORT_ONLY=false

# HTTPS Configuration (Production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Session Configuration
SESSION_NAME=rls-guard-dog-session
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# CORS Configuration
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Compression Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Static File Configuration
STATIC_MAX_AGE=31536000
STATIC_ETAG=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics
METRICS_INTERVAL=60000

# Graceful Shutdown Configuration
SHUTDOWN_TIMEOUT=30000
SHUTDOWN_SIGNALS=SIGTERM,SIGINT

# Cluster Configuration
CLUSTER_ENABLED=false
CLUSTER_WORKERS=0

# Memory Configuration
MAX_OLD_SPACE_SIZE=4096
MAX_SEMI_SPACE_SIZE=128

# Timezone Configuration
TZ=UTC

# Locale Configuration
LOCALE=en-US
CURRENCY=USD

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Search Configuration
SEARCH_MIN_QUERY_LENGTH=3
SEARCH_MAX_RESULTS=50

# Notification Configuration
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# Audit Log Configuration
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# Data Retention Configuration
DATA_RETENTION_ENABLED=true
DATA_RETENTION_DAYS=365

# Maintenance Mode Configuration
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# API Versioning Configuration
API_VERSION=v1
API_PREFIX=/api

# Documentation Configuration
DOCS_ENABLED=true
DOCS_PATH=/docs
SWAGGER_ENABLED=true

# Development Configuration
HOT_RELOAD=true
SOURCE_MAPS=true
MINIFY_ASSETS=false

# Production Configuration
OPTIMIZE_ASSETS=true
BUNDLE_ANALYZER=false
PRELOAD_CRITICAL_RESOURCES=true

# Error Handling Configuration
ERROR_STACK_TRACE=true
ERROR_REPORTING=true
ERROR_NOTIFICATION=false

# Security Headers Configuration
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin